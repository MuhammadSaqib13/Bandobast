<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleVendor">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F6F5F5">


        <LinearLayout
            android:id="@+id/card_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banner_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#639F9F9F"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-275dp"
                android:src="@drawable/ic_baseline_arrow_back_white_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_card"
        app:cardCornerRadius="20dp"
        >

        <ScrollView
            android:id="@+id/scrll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#639F9F9F"
                    android:textColor="#5E5D5D"
                    android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vw_map"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="120dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/SearchCard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F6F5F5"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="#639F9F9F" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cont"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/scrll_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="-60dp"
                    android:backgroundTint="#639F9F9F"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:letterSpacing="0.1"
                        android:textColor="#454662"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#639F9F9F"
                    android:textColor="#5E5D5D"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/veh_category"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#639F9F9F"
                    android:textColor="#5E5D5D"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_service"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#639F9F9F"
                    android:textColor="#5E5D5D"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/img1_img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/img1"
                        android:layout_width="160dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="115dp"
                            android:background="#639F9F9F" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/img2"
                        android:layout_width="160dp"
                        android:layout_height="115dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="115dp"
                            android:background="#639F9F9F" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            <LinearLayout
                android:id="@+id/img3_img4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img3"
                    android:layout_width="160dp"
                    android:layout_height="115dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="115dp"
                        android:background="#639F9F9F"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/img4"
                    android:layout_width="160dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="115dp"
                        android:background="#639F9F9F"

                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="#639F9F9F"
                    android:textColor="#5E5D5D"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/description2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:maxLines="2"
                    android:background="#639F9F9F"
                    android:textColor="#454662"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
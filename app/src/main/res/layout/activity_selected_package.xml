<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedPackageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/typeVnd"
                android:layout_alignParentTop="true"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_baseline_segment_24" />

                <ImageView
                    android:id="@+id/locate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bandobastupda" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="80dp"
                android:text="Best Vendors for your desired Event!!"
                android:textColor="#454662"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Banquet_Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_popular"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#F6F5F5"
                app:cardCornerRadius="10dp"
                app:contentPadding="7dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgBanquet"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hall1" />

                    <TextView
                        android:id="@+id/lbl_BanqCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgBanquet"
                        android:layout_marginLeft="160dp"
                        android:paddingEnd="10dp"
                        android:text="Code"
                        android:textSize="5dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txt_BanqName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lbl_BanqCode"
                        android:text="Venue"
                        android:fontFamily="sans-serif"
                        android:textColor="#454662"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BanqLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_BanqName"
                        android:maxLines="5"
                        android:fontFamily="sans-serif"
                        android:text="Lawn, Banquest Halls, Farmshouse"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/banq_amnt_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/BanqLocation"
                        android:text="Rs. 20000 Onwards"
                        android:textColor="#454662"
                        android:fontFamily="sans-serif"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <!--    Caterer Card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Caterer_Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Banquet_Card"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#F6F5F5"
                app:cardCornerRadius="10dp"
                app:contentPadding="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCaterer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hall1" />

                    <TextView
                        android:id="@+id/lbl_CatCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgCaterer"
                        android:paddingEnd="10dp"
                        android:text="Code"
                        android:textSize="5dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txt_CatName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lbl_CatCode"
                        android:text="Caterer"
                        android:fontFamily="sans-serif"
                        android:textColor="#454662"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CatLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_CatName"
                        android:maxLines="5"
                        android:fontFamily="sans-serif"
                        android:text="Lawn, Banquest Halls, Farmshouse"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/cat_amnt_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/CatLocation"
                        android:text="Rs. 20000 Onwards"
                        android:fontFamily="sans-serif"
                        android:textColor="#454662"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <!--    Photographer Card-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Photographer_Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Caterer_Card"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#F6F5F5"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="7dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/imgPhotographer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hall1" />

                    <TextView
                        android:id="@+id/lbl_PhotoCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgPhotographer"
                        android:paddingEnd="10dp"
                        android:text="Code"
                        android:textSize="5dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txt_PhotoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lbl_PhotoCode"
                        android:text="Photographer"
                        android:fontFamily="sans-serif"
                        android:textColor="#454662"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/PhotoLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_PhotoName"
                        android:maxLines="5"
                        android:fontFamily="sans-serif"
                        android:text="Lawn, Banquest Halls, Farmshouse"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/photo_amnt_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/PhotoLocation"
                        android:text="Rs. 20000 Onwards"
                        android:fontFamily="sans-serif"
                        android:textColor="#454662"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/venue_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="15dp"
                android:layout_below="@id/Photographer_Card"
                android:text="Recommended Transporters"
                android:textSize="16sp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trpt_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@id/venue_txt"
                android:paddingBottom="20dp" />

            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Wave"
                android:layout_width="wrap_content"
                android:layout_below="@id/venue_txt"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:SpinKit_Color="#454662" />

            <!--Decorator Horizontal View-->
            <TextView
                android:id="@+id/decorator_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="15dp"
                android:layout_below="@id/trpt_scroll"
                android:text="Recommended Decorators"
                android:textSize="16sp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deco_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/decorator_txt"
                android:paddingBottom="120dp" />

        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/card_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"

        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/card_BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottm_AppBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="45dp"
                app:backgroundTint="#454662"
                app:elevation="0dp"
                app:fabCradleMargin="20dp"
                app:fabCradleRoundedCornerRadius="15dp"
                app:fabCradleVerticalOffset="15dp">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottm_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:itemIconTint="#fff"
                    app:itemTextColor="#fff"
                    app:labelVisibilityMode="labeled"
                    app:menu="@menu/navigation_menu" />

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fb_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#454662"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_anchor="@id/bottm_AppBar"
                app:maxImageSize="30dp"
                app:tint="#80cc96" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/typeVnd"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_segment_24" />

            <ImageView
                android:id="@+id/locate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bandobastupda" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeVnd"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Popular Collections!"
                android:textColor="#454662"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/firstcardrow"
        android:layout_below="@id/top_searchbar"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/Venuelayout"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/VenueCard"
                android:layout_width="120dp"
                android:layout_height="95dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="115dp"
                    android:src="@drawable/hall1"

                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_venue"
                android:layout_below="@id/VenueCard"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Event Placer"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/Photographerlayout"
            android:layout_toRightOf="@id/Venuelayout"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/PhotographerCard"
                android:layout_width="120dp"
                android:layout_height="95dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="115dp"
                    android:src="@drawable/photography"

                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_photo"
                android:layout_below="@id/VenueCard"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Photographer"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/Transporterlayout"
            android:layout_toRightOf="@id/Photographerlayout"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/TransporterCard"
                android:layout_width="120dp"
                android:layout_height="95dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="115dp"
                    android:src="@drawable/transport"

                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_transport"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transporter"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/firstcardrow"
        android:id="@+id/secondcardrow"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/Decoratorlayout"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/DecoratorCard"
            android:layout_width="120dp"
            android:layout_height="95dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="115dp"
                android:src="@drawable/decor"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_decor"
            android:layout_below="@id/VenueCard"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Decorator"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/CatererLayout"
        android:layout_toRightOf="@id/Decoratorlayout"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/CatererCard"
            android:layout_width="120dp"
            android:layout_height="95dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="115dp"
                android:src="@drawable/catering"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_caterer"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Caterer"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/Otherslayout"
        android:layout_toRightOf="@id/CatererLayout"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/OthersCard"
            android:layout_width="120dp"
            android:layout_height="95dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="115dp"
                android:src="@drawable/viewmore"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_others"
            android:layout_below="@id/VenueCard"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+ View More .."
            android:textColor="#80cc96"
            android:textSize="15sp" />

    </LinearLayout>



</RelativeLayout>


    <RelativeLayout
        android:id="@+id/Checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondcardrow"
        android:gravity="center"
        android:layout_margin="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Tasklist"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:backgroundTint="#F6F5F5"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Find Your Nearest Decorator below!"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_viewlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawablePadding="5dp"
                    android:text="View all vendors"
                    android:textColor="#4E4C4C"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/checklist" />


        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/venue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_Tasklist"
            android:text="" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/venue_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/venue_txt"
            android:layout_marginBottom="45dp" />

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Wave"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:SpinKit_Color="#454662" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"

        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/card_BottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottm_AppBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="45dp"
                app:backgroundTint="#454662"
                app:elevation="0dp"
                app:fabCradleMargin="20dp"
                app:fabCradleRoundedCornerRadius="15dp"
                app:fabCradleVerticalOffset="15dp">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottm_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:itemIconTint="#fff"
                    app:itemTextColor="#fff"
                    app:labelVisibilityMode="labeled"
                    app:menu="@menu/navigation_menu" />

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fb_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#454662"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_anchor="@id/bottm_AppBar"
                app:maxImageSize="30dp"
                app:tint="#80cc96" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>

</RelativeLayout>